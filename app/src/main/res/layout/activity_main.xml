<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.niuyang.project.MainActivity"
        android:background="#00BFFF">
    <ImageView
            android:id="@+id/btn3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_off"
            android:layout_marginEnd="22dp"
            android:layout_alignTop="@+id/btn4" android:layout_toStartOf="@+id/btn4"/>
    <ImageView
            android:id="@+id/btn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_off"
            android:layout_marginEnd="18dp" android:layout_alignTop="@+id/btn3" android:layout_toStartOf="@+id/btn3"/>
    <ImageView
            android:id="@+id/btn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_off"
            android:layout_marginEnd="16dp" android:layout_alignTop="@+id/btn2" android:layout_toStartOf="@+id/btn2"/>
    <TextView
            android:id="@+id/txt"
            android:text="闪烁间隔(0~9s)："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn2" android:layout_alignStart="@+id/btn1" android:layout_marginTop="60dp"/>
    <ImageView
            android:id="@+id/btn4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_off"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="70dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/editText"
            android:layout_alignBaseline="@+id/txt" android:layout_alignBottom="@+id/txt"
            android:layout_toStartOf="@+id/btn4" android:inputType="number" android:hint="0-9"/>
    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp" android:id="@+id/btn_send" android:layout_below="@+id/editText"
            android:layout_toStartOf="@+id/editText" android:layout_marginEnd="13dp"/>
    <Button
            android:text="Get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_get"
            android:layout_alignBaseline="@+id/btn_send" android:layout_alignBottom="@+id/btn_send"
            android:layout_toEndOf="@+id/btn2" android:layout_marginStart="19dp"/>
    <EditText
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edt2"
            android:layout_alignBaseline="@+id/textView4" android:layout_alignBottom="@+id/textView4"
            android:layout_toStartOf="@+id/btn4"/>
    <ImageView
            android:id="@+id/btn_con"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_connect"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <TextView
            android:text="Hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text" android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/txt" android:layout_alignParentStart="true"/>
    <TextView
            android:text="IP地址:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/btn_con" android:layout_alignEnd="@+id/btn1"/>
    <Button
            android:text="CR"
            android:layout_width="50dp"
            android:layout_height="40dp" android:layout_below="@+id/btn4" android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" android:id="@+id/btn_off"/>
</RelativeLayout>
